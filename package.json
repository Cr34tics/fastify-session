{
  "name": "@mgcrea/fastify-session",
  "version": "2.3.0",
  "description": "Session plugin for fastify written in TypeScript supporting both stateless and stateful sessions",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/fastify-session",
  "license": "MIT",
  "access": "public",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run spec -- --watch",
    "build": "tsup src/index.ts --format cjs,esm --sourcemap --dts --clean",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "prettify": "prettier --write src/ test/",
    "typecheck": "tsc --noEmit",
    "spec": "vitest --run",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "nanoid": "5.0.7"
  },
  "devDependencies": {
    "@fastify/cookie": "^10.0.1",
    "@mgcrea/eslint-config-node": "^0.12.9",
    "@mgcrea/fastify-session-redis-store": "^1.0.0",
    "@mgcrea/fastify-session-sodium-crypto": "^1.1.1",
    "@mgcrea/pino-pretty-compact": "^1.3.0",
    "@tsconfig/node-lts": "^20.1.1",
    "@tsconfig/strictest": "^2.0.3",
    "@types/benchmark": "^2.1.5",
    "@types/node": "^22.6.1",
    "@types/sodium-native": "^2.3.9",
    "benchmark": "^2.1.4",
    "eslint": "^8.57.0",
    "fastify": "^5.0.0",
    "ioredis": "^5.3.2",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "fastify",
    "secure",
    "session",
    "sodium"
  ]
}
