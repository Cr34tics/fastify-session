{
  "name": "@mgcrea/fastify-session",
  "version": "0.16.0",
  "description": "Session plugin for fastify written in TypeScript supporting both stateless and stateful sessions",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/fastify-session",
  "license": "MIT",
  "access": "public",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run spec -- --watch",
    "build": "tsup src/index.ts --format cjs,esm --sourcemap --dts --clean",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "prettify": "prettier --write src/ test/",
    "typecheck": "tsc --noEmit",
    "spec": "vitest --run",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "fastify-plugin": "^4.4.0",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@fastify/cookie": "^8.3.0",
    "@mgcrea/fastify-session-redis-store": "^1.0.0",
    "@mgcrea/fastify-session-sodium-crypto": "^1.0.0",
    "@mgcrea/pino-pretty-compact": "^1.0.0",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/benchmark": "^2.1.2",
    "@types/node": "^18.11.18",
    "@types/sodium-native": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "benchmark": "^2.1.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint": "^8.31.0",
    "fastify": "^4.11.0",
    "ioredis": "^5.2.4",
    "pino-pretty": "^9.1.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.27.0"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "fastify",
    "secure",
    "session",
    "sodium"
  ]
}
